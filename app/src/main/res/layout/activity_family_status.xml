<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/llIncomeSource"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@color/white">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="主要收入来源"/>
                <TextView
                        android:id="@+id/tvIncomeSource"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"/>
                <ImageView
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="wrap_content"
                        android:text="家庭收入"/>
                <EditText
                        android:id="@+id/etFamilyIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入家庭收入"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="wrap_content"
                        android:text="工资收入"/>
                <EditText
                        android:id="@+id/etFamilyWageIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入工资收入"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="wrap_content"
                        android:text="经营性收入"/>
                <EditText
                        android:id="@+id/etFamilyOperationalIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入经营性收入"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="wrap_content"
                        android:text="低保收入"/>
                <EditText
                        android:id="@+id/etFamilyLowIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入低保收入"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="wrap_content"
                        android:text="养老金收入"/>
                <EditText
                        android:id="@+id/etFamilyPensionIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入养老金收入"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="wrap_content"
                        android:text="土地确权亩数"/>
                <EditText
                        android:id="@+id/etFamilyAreaNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入土地确权亩数"
                        android:inputType="number"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@color/white">
                <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="确权人数"/>
                <EditText
                        android:id="@+id/etFamilyPersonNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入确权人数"
                        android:inputType="number"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:id="@+id/llFamilyAreaTime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">
                <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="wrap_content"
                        android:text="确权时间"/>
                <TextView
                        android:id="@+id/tvFamilyAreaTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"/>
                <ImageView
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@color/white">
                <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="流转亩数"/>
                <EditText
                        android:id="@+id/etFamilyAreaFlowNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入流转亩数"
                        android:inputType="number"
                        android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:id="@+id/llIsEnterBasicOldInsurance"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@color/white">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="是否参加城镇职工基本养老保险"/>
                <TextView
                        android:id="@+id/tvIsEnterBasicOldInsurance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"/>
                <ImageView
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:id="@+id/llIsEnterBasicMedicalInsurance"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@color/white">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="是否参加城乡居民医疗保险"/>
                <TextView
                        android:id="@+id/tvIsEnterBasicMedicalInsurance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"/>
                <ImageView
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/background_color"/>
            <LinearLayout
                    android:id="@+id/llIsEnterNewInsurance"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@color/white">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="是否参加新型农村社会养老保险或城乡居民"/>
                <TextView
                        android:id="@+id/tvIsEnterNewInsurance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"/>
                <ImageView
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_35">
                <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_gravity="center"
                        android:background="@drawable/login_dialog"
                        android:visibility="gone"/>
                <TextView
                        android:id="@+id/tvSubmitBasic"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/login_button_bg"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>