<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"/>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:orientation="vertical">
            <LinearLayout
                    android:padding="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView android:id="@+id/ivPeoImage"
                           android:src="@drawable/ic_header"
                           android:layout_width="@dimen/dp_40"
                           android:layout_height="@dimen/dp_40"/>

                <LinearLayout
                        android:paddingLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tvManage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="网格员"
                            android:inputType="text"
                            android:padding="@dimen/dp_2"/>
                    <TextView
                            android:id="@+id/tvCreateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="时间"
                            android:inputType="text"
                            android:padding="@dimen/dp_2"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tvContent"
                        android:text="XXX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <com.youth.banner.Banner
                        android:id="@+id/mBanner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        app:image_scale_type="fit_xy"/>

            </LinearLayout>


            <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>
            <TextView
                    android:id="@+id/tvWorkAddress"
                    tools:text="洋河新区新城名苑小区"
                    android:drawableStart="@drawable/ic_place_black_24dp"
                    android:drawablePadding="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:padding="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:padding="@dimen/dp_5"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">

                <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        android:text="上报人"/>
                <TextView
                        android:id="@+id/tvWorkReporter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        tools:text="吴将"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="@dimen/dp_5"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        android:text="手机号"/>
                <TextView
                        android:id="@+id/tvWorkReporterTel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        tools:text="18512503890"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="@dimen/dp_5"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        android:text="状态"/>
                <TextView
                        android:id="@+id/tvReportStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        tools:text="未处理"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="@dimen/dp_5"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        android:text="上报时间"/>
                <TextView
                        android:id="@+id/tvReportTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        tools:text="2018 10/19 8:45"/>
            </LinearLayout>

            <LinearLayout
                    android:padding="@dimen/dp_5"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        android:text="选择部门"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textSize="@dimen/sp_14"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:text="---"
                        android:id="@+id/tvDoDepart"/>
            </LinearLayout>


            <LinearLayout
                    android:padding="@dimen/dp_5"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:gravity="center_vertical"
                        android:text="指派人员"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textSize="@dimen/sp_14"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:text="---"
                        android:id="@+id/tvDoPeople"/>
            </LinearLayout>

            <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

            <FrameLayout
                    android:id="@+id/flSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_35">
                <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_gravity="center"
                        android:background="@drawable/login_dialog"
                        android:visibility="gone"/>
                <TextView
                        android:id="@+id/tvSubmitReport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/login_button_bg"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"/>
            </FrameLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>