<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"/>
    <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:hint="走访描述"
            android:inputType="text"
            android:padding="@dimen/dp_10"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100">
            <ImageView
                    android:id="@+id/ivPic"
                    android:visibility="gone"
                    android:contentDescription="@null"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:scaleType="fitXY"/>
            <ImageView
                    android:id="@+id/ivDelete"
                    android:visibility="gone"
                    android:contentDescription="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/delete_pic_1x"/>
            <ImageView
                    android:id="@+id/ivAddPic"
                    android:contentDescription="@null"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_pic_1x"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/tvTime"
                tools:text="2018年11月28日 15:11"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:text="请拍摄带有门牌号的照片"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvAddress"
            tools:text="洋河新区新城名苑小区"
            android:drawableStart="@drawable/ic_place_black_24dp"
            android:drawablePadding="@dimen/dp_5"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    <View
            android:background="@color/background_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
    <LinearLayout
            android:id="@+id/llEditHouseStatus"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                android:text="房屋状态"/>
        <TextView
                android:id="@+id/tvHouseType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                tools:text="房屋状态"/>
        <ImageView
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_35">
        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center"
                android:background="@drawable/login_dialog"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/tvSubmitCheck"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@drawable/login_button_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"/>
    </FrameLayout>
</LinearLayout>