<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_15"
        tools:layout_height="@dimen/dp_170"
        android:layout_height="wrap_content">
    <ImageView
            android:background="#6699FF"
            android:contentDescription="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dp_120"
                android:baselineAligned="false">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="姓名"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tvName"
                            tools:text="何宝阳"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="身份"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tvHouseRelation"
                            tools:text="户主"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="性别"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tvGender"
                            tools:text="男"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="民族"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tvNationality"
                            tools:text="汉"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="出生"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tvBirthday"
                            tools:text="1970 年 7 月 16 日"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="电话"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tvPhone"
                            tools:text="18512503890"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">
                <ImageView
                        android:id="@+id/ivAvatar"
                        tools:src="@drawable/ic_header"
                        android:contentDescription="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tvPersonType"
                        tools:text="留守儿童"
                        android:textColor="#FFFF00"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
            <TextView
                    android:text="身份证号码 "
                    android:textColor="#3366FF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvIdentity"
                    android:layout_marginStart="@dimen/dp_5"
                    tools:text="321****************16 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>